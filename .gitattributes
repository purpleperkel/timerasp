# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Python files should always use LF
*.py text eol=lf

# Web files should always use LF
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf

# Service files should always use LF
*.service text eol=lf

# Images are binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.webp binary

# Videos are binary
*.mp4 binary
*.avi binary
*.mov binary

# Archives are binary
*.tar.gz binary
*.zip binary
*.7z binary

# Documents are binary
*.pdf binary

# Exclude from exports
.gitignore export-ignore
.gitattributes export-ignore
